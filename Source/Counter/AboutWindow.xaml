<Window x:Class="Counter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="درباره" Height="220" Width="280" ResizeMode="NoResize" TextOptions.TextFormattingMode="Display" FontFamily="Tahoma" Icon="Icon.ico">
    <Grid FlowDirection="RightToLeft">
        <Image HorizontalAlignment="Left" Height="101" Margin="171,2,0,0" VerticalAlignment="Top" Width="101" Source="Icon.ico" RenderOptions.BitmapScalingMode="HighQuality"/>
        <StackPanel HorizontalAlignment="Left" Margin="12,8,0,0" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Text="شمارنده" FontSize="16" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" Text="نسخه 1.0.0" Padding="0,8,0,0"/>
            <TextBlock TextWrapping="Wrap" Text="علیرضا شهیدی فرد" Padding="0,12,0,0"/>
            <TextBlock x:Name="TextBlock_GithubLink" TextWrapping="Wrap" Text="https://github.com/Wirmaple73" Padding="0,6,0,0" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" MouseDown="TextBlock_GithubLink_MouseDown"/>
        </StackPanel>
        <Button Content="بستن" HorizontalAlignment="Left" Margin="12,0,0,11" VerticalAlignment="Bottom" Width="94" Height="29" FontSize="13" IsDefault="True" IsCancel="True" Click="Button_Close_Click"/>
    </Grid>
</Window>
